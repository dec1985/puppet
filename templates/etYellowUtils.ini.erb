[ yellow ]
# settings for yellow servers
# the name 'server1' or 'server2' does not matter
# To add a server, just add one section

[[ server1 ]]
yellow_server = tcp://<%= @yellow %>:7890
update_publisher = tcp://<%= @yellow %>:7891
heartbeat_monitor = tcp://<%= @yellow %>:7899

#[[ server2 ]]
#yellow_server = tcp://172.20.1.55:7890
#update_publisher = tcp://172.20.1.55:7891
#heartbeat_monitor = tcp://172.20.1.55:7899

[ client ]
update_sync_interval = 60
# timeout in seconds for getting a reply from registered service in yellow page server
connection_timeout = 2.0

[ service ]
heartbeat_interval = 1.0
shutdown_delay_time = 2.0
lookup_timeout = 1.0
lookup_retries = 10
ip_retriever_host = <%= @yellow %>
ip_retriever_port = 7892

[ HWM ]
simple_dealer = 1000
simple_pusher = 1000
update_subscriber = 1000
heartbeat_sender = 8

[app]
is_sso = False
app_id =
