[loggers]
keys=root

[handlers]
keys=err,debug,stderr,syslog

[formatters]
keys=general

[handler_err]
class=FileHandler
level=ERROR
formatter=general
args=('/tmp/<%= @title %>-err.log', 'a')

[handler_debug]
class=FileHandler
level=DEBUG
formatter=general
args=('/tmp/<%= @title %>.log', 'a')

[handler_stderr]
formatter=general
class=StreamHandler
level=DEBUG
args=(sys.stderr,)

[handler_syslog]
formatter=general
class=handlers.SysLogHandler
args=()

[formatter_general]
format=%(asctime)-15s %(process)s %(thread)s %(pathname)s %(name)s %(funcName)s:%(lineno)s %(levelname)s |> %(message)s

[logger_root]
level=DEBUG
handlers=err,debug,stderr
